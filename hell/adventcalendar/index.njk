{% macro day(num) %}
  {% set days = collections.advent2022 %}
  <li class="acalendar__day" {% if days[num - 1].data.active %}data-day="{{ num }}"{% endif %} {% if num === 24 %}style="grid-column: span 2"{% endif %}>
    <div>
      <span aria-hidden="true">{{ num }}</span><a {% if days[num - 1].data.active %}href="/adventcalendar/2022/{{ num }}"{% endif %}>{{ num }}</a>
    </div>
  </li>
{% endmacro %}

