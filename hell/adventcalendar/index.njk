<script>
  const preview = document.querySelector('.acalendar-view');
  const calendar = document.querySelector('.acalendar')
  preview.addEventListener('click', e => {
    const clicked = e.target.closest('button')
    if (clicked) {
      updateView(clicked.dataset.view, clicked);
      localStorage.setItem('html_calendar23view', clicked.dataset.view)
    }
  })

  const updateView = (type, button) => {
    const active = preview.querySelector('[aria-pressed="true"]')
    active.setAttribute('aria-pressed', false)
    button.setAttribute('aria-pressed', true)
    
    calendar.classList = `acalendar acalendar--${type}`
  }

  if (localStorage.getItem('html_calendar23view')) {
    const type = localStorage.getItem('html_calendar23view')
    updateView(type, document.querySelector(`button[data-view="${type}"]`))
  }

</script>

